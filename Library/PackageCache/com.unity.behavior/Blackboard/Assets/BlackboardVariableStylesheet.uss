.BlackboardVariable {
    height: auto;
    padding-top: 4px;
    padding-bottom: 4px;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    max-width: 100%;
}

#VariableContainer {
    background-color: var(--appui-color-transparent-black-100);
    border-radius: var(--appui-border-radius-md);
    align-items: flex-start;
    align-self: stretch;
    flex-direction: column;
    flex: auto;
    padding: 0 6px;
}

.Expanded #VariableContainer {
    padding: 0 6px 6px;
    height: auto;
}

#VariableContainer:hover {
    background-color: var(--appui-backgrounds-300);
}

#Info {
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
    flex-direction: row;
    height: 24px;
    max-height: 24px;
}

#Info Label {
    color: var(--appui-color-white);
    font-size: var(--appui-font-sizes-100);
    flex-shrink: 1;
    padding: 0;
}

#Info #Name {
    -unity-font-definition: url('/Packages/com.unity.dt.app-ui/PackageResources/Fonts/Inter-SemiBold.ttf');
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0;
    padding-top: 2px;
    padding-bottom: 2px;
    align-self: center;
}

#Info #VariableType {
    align-self: center;
    -unity-text-align: middle-right;
    -unity-font-style: initial;
    font-size: 11px;
    color: var(--appui-foregrounds-50);
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0;
}

#NameContainer {
    height: 20px;
    max-width: 50%;
    align-self: center;
    align-items: center;
    justify-content: center;
}

#VariableTypeContainer {
    height: 100%;
    max-width: 50%;
    align-self: flex-start;
    align-items: center;
    flex-direction: row;
}

#Content {
    flex-grow: 1;
    align-self: center;
    padding: 0;
}

#ExpandedContainer {
    width: 100%;
}

.Expanded #ExpandedContainer {
    display: flex;
    margin-top: 2px;
}

.Collapsed #ExpandedContainer {
    display: none;
}

.Collapsed {
    height: 28px;
}

.Collapsed #VariableContainer {
    background-color: initial;
    min-height: 24px;
    height: 24px;
    max-height: 24px;
    align-items: center;
}

.Collapsed #VariableContainer:hover {
    background-color: var(--appui-backgrounds-300);
}

#ValueContainer {
    align-items: flex-start;
    flex-direction: row;
    height: auto;
    min-height: 20px;
    width: 100%;
    flex-grow: 1;
}

#ValueContainer Label {
    color: var(--appui-foregrounds-25);
    padding: 0;
    margin-left: 0;
}

.BlackboardVariable #NameField {
    display: none;
}

.Editing #Name {
    display: none;
}

.Editing #NameField {
    display: flex;
}

Vector4Field {
    flex-direction: row;
}

#appui-vector4field__row {
    margin-right: 6px;
    margin-bottom: 0;
}

.appui-toggle {
    height: 20px;
}

#ListVariableListViewItem {
    height: 22px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

ScrollView {
    background-color: var(--appui-backgrounds-300);
    border-color: var(--appui-backgrounds-100);
    padding-left: var(--appui-static-spacing-50);
    padding-right: var(--appui-static-spacing-50);
}

.unity-list-view__empty-label {
    margin: 0;
}

.ListVariableItemLabel {
    margin: 0;
    flex-grow: 1;
    width: auto;
    min-width: 70px;
    color: var(--appui-foregrounds-50);
    -unity-text-align: middle-left;
    overflow: hidden;
    text-overflow: ellipsis;
}

.VariableDefaultFieldLabel {
    color: var(--appui-foregrounds-25);
    font-size: var(--appui-font-sizes-100);
    padding: 0;
    align-self: center;
}

#ListVariableListViewItem .appui-textfield, .appui-numericalfield, .appui-vector2field,
.appui-vector3field, .appui-vector4field, .appui-colorfield, .unity-object-field {
    flex-shrink: 1;
    height: 20px;
    width: 100%;
    -unity-text-align: middle-left;
}

.unity-list-view__footer {
    background-color: var(--appui-backgrounds-300);
    border-color: var(--appui-backgrounds-100);
    padding: 0;
    padding-left: 2px;
    padding-right: 2px;
    margin-right: 10px;
}

.unity-list-view__footer Button {
    background-color: var(--appui-backgrounds-300);
    padding: 0 14px;
    height: 18px;
    width: 18px;
}

.unity-list-view__footer Button:hover {
    background-color: rgba(255,255,255,0.025)
}

.unity-object-field {
    margin-left: 0;
    margin-right: 0;
}

.SharedVariable #NameContainer {
    height: 18px;
}

.SharedVariable #Name {
    border-bottom-width: 1px;
    border-bottom-color: #C9B33F;
}

#VariableToggleContainer {
    flex-direction: row;
    height: 20px;
    margin-top: 4px;
}

#ExposedToggle {
    margin-right: 12px;
}

#SharedToggle {
    margin-right: 12px;
}

#SharedToggle #appui-toggle__label {
    border-bottom-width: 1px;
    border-bottom-color: #C9B33F;
    height: 15px;
}