<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:appui="Unity.AppUI.UI">
    <ui:VisualElement name="VariableContainer">
        <ui:VisualElement name="Info">
            <ui:VisualElement name="NameContainer">
                <ui:Label text="New Variable" name="Name" />
                <appui:TextField name="NameField" />
            </ui:VisualElement>
            <ui:VisualElement name="VariableTypeContainer">
                <ui:Label text="Type" name="VariableType" />
            </ui:VisualElement>
        </ui:VisualElement>
        <ui:VisualElement name="ExpandedContainer">
            <ui:VisualElement name="ValueContainer">
                <ui:VisualElement name="Content" />
            </ui:VisualElement>
            <ui:VisualElement name="VariableToggleContainer">
            <appui:Toggle name="ExposedToggle" label="Exposed" tooltip="Show the variable on the Inspector." />
            <appui:Toggle name="SharedToggle" label="Shared" tooltip="Share the variable between instances of the same graph." />
        </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>