#Content {
    min-width: 160px;
    display: flex;
    flex-direction: column;
}

#NodeTitle {
    flex-direction: row;
}

#EventStartNodeTitle {
    width: 100%;
    align-items: center;
    background-color: var(--appui-color-green-800);
    justify-content: center;
}

.OneLineNodeTitle {
    border-radius: var(--appui-border-radius-md);
    height: 36px;
}

.TwoLineNodeTitle {
    border-radius: var(--appui-border-radius-md) var(--appui-border-radius-md) 0 0;
    height: 35px;
}

#NodeTitle .LinkField {
    background-color: transparent;
    border-width: 0;
    align-self: center;
}

#NodeTitle #InputField {
    background-color: transparent;
    border-width: 0;
    padding-left: 0;
}

#NodeTitleLabel {
    display: none;
}

#OnEventStartTitle {
    flex-direction: row;
}

.NoMessageTypes {
    border-radius: var(--appui-border-radius-md);
}

#AssignFieldLine  {
    flex-direction: row;
    justify-content: space-between;
}

#AssignFieldLine > Label {
    color: var(--appui-foregrounds-100);
}

#ChannelLine Label {
    -unity-font-definition: url('/Packages/com.unity.dt.app-ui/PackageResources/Fonts/Inter-SemiBold.ttf');
    padding: 0;
    margin: 0;
}

#ChannelLine > Label {
    align-self: center;
    margin-left: 2px;
    margin-right: 2px;
}

#ChannelLine Icon {
    --unity-image-tint-color: var(--appui-color-white);
}

#ChannelMessageCaption Label {
    padding: 0;
    margin: 0;
    -unity-font-definition: url('/Packages/com.unity.dt.app-ui/PackageResources/Fonts/Inter-Regular.ttf');
    opacity: 0.5;
}

#ChannelLine {
    flex-direction: row;
    justify-content: center;
    height: 20px;
}

#ChannelLine .LinkField {
    height: 16px;
}

#StackedLines {
    padding: 2px 10px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-self: stretch;
}

.FieldContainer Label {
    padding: 0;
    margin: 0;
}

#AssignFieldsElement {
    padding: 0 8px 8px;
    min-width: 280px;
}

#AssignFieldLine {
    padding-top: 8px;
    justify-content: space-between;
}

#AssignFieldLine .LinkField Label {
    overflow: hidden;
    text-overflow: ellipsis;
    -unity-text-align: middle-left;
}

.Hidden {
    display: none;
}

#ChannelVariable .LinkedLabelContainer Label {
    -unity-font-definition: url('/Packages/com.unity.dt.app-ui/PackageResources/Fonts/Inter-SemiBold.ttf');
}

#ChannelVariable .LinkedLabelContainer Icon {
    top: -2px;
}

#NodeValueContainer {
    display: flex;
}