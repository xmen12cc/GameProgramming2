#HelpTextBox {
    flex-direction: row;
    margin-bottom: 12px;
    flex-shrink: 1;
}

#HelpTextBorder {
    background-color: var(--appui-color-white);
    height: 100%;
    width: 2px;
    flex-shrink: 0;
    margin-right: 8px;
    flex-grow: 0;
}

#HelpTextBox > #Text {
    white-space: normal;
    font-size: var(--appui-font-sizes-70);
    margin: 0;
    padding: 0;
}