.NavigationDrawer {
  height: 100%;
  width: 26px;
  background-color: #202020;
  flex-shrink: 0;
  flex-direction: row;
}

.NavigationDrawer-ContentContainer {
  position: absolute;
  height: 100%;
  width: 100%;
  background-color: #202020;
  flex-shrink: 0;
  align-items: flex-start;
  overflow: hidden;
}

.NavigationDrawer-Content {
  flex-grow: 1;
}

.NavigationDrawer__Expanded .NavigationDrawer-ContentContainer {
  width: auto;
  padding-right: 2px;
}

.NavigationDrawer__Expanded .NavigationDrawerButton {
  width: 100%;
}